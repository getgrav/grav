<header class="site-header" role="banner">
    <div class="container">
        <div class="header-inner">
            <div class="logo">
                {% set logo_path = 'theme://images/logos/logo-ocedc.svg' %}
                {% if theme.header.use_logo_image and theme.header.logo %}
                    {% set logo_path = 'theme://images/logos/' ~ theme.header.logo %}
                {% endif %}
                <a href="{{ base_url }}" class="logo-link">
                    <img src="{{ url(logo_path) }}"
                         alt="{{ theme.header.logo_alt|default(site.title)|e('html') }}"
                         class="logo-image"
                         height="50" />
                    {% if theme.header.tagline %}
                        <div class="logo-tagline">{{ theme.header.tagline|e('html') }}</div>
                    {% endif %}
                </a>
            </div>
            
            {% block navigation %}
                {% include 'partials/navigation.html.twig' %}
            {% endblock %}
            
            <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>
</header>

