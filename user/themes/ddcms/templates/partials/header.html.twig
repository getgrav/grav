<header class="site-header" role="banner">
    <div class="container">
        <div class="header-inner">
            <div class="logo">
                {% if theme.header.use_logo_image and theme.header.logo %}
                    <a href="{{ base_url }}" class="logo-link">
                        <img src="{{ url('theme://images/logos/' ~ theme.header.logo) }}"
                             alt="{{ theme.header.logo_alt|default(site.title)|e('html') }}"
                             class="logo-image"
                             height="50" />
                    </a>
                {% else %}
                    <a href="{{ base_url }}" class="logo-link">
                        <span class="logo-text">{{ theme.header.logo_text|default(site.title)|e('html') }}</span>
                    </a>
                {% endif %}
            </div>
            
            {% if theme.header.tagline %}
                <p class="tagline">{{ theme.header.tagline|e('html') }}</p>
            {% endif %}
            
            {% block navigation %}
                {% include 'partials/navigation.html.twig' %}
            {% endblock %}
            
            <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>
</header>

