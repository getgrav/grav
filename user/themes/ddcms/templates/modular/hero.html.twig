{% set hero_title = page.header.hero_title ?: page.title %}
{% set hero_subtitle = page.header.hero_subtitle %}
{% set hero_buttons = page.header.hero_buttons ?: [] %}

<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            {% if hero_title %}
                <h1>{{ hero_title }}</h1>
            {% endif %}
            
            {% if hero_subtitle %}
                <p class="hero-subtitle">{{ hero_subtitle }}</p>
            {% endif %}
            
            {% if hero_buttons %}
                <div class="hero-buttons">
                    {% for button in hero_buttons %}
                        <a href="{{ button.url }}" class="btn {{ button.class ?: 'btn-primary' }}">
                            {{ button.text }}
                            {% if button.icon %}
                                <i class="{{ button.icon }}"></i>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
            
            {# Only render raw markdown content, not processed template output #}
            {% if page.rawContent and not (page.content starts with '<') %}
                <div class="hero-description">
                    {{ page.rawContent|markdown|raw }}
                </div>
            {% elseif page.content and page.content|trim|slice(0, 1) != '<' %}
                <div class="hero-description">
                    {{ page.content|raw }}
                </div>
            {% endif %}
        </div>
    </div>
</section>

