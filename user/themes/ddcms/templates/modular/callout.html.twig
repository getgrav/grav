{% set label = page.header.label %}
{% set callout_title = page.header.callout_title ?: page.title %}
{% set callout_message = page.header.callout_message %}
{% set callout_button = page.header.callout_button %}

<section class="callout-section">
    <div class="container">
        <div class="callout-content">
            {% if label %}
                <span class="callout-label">{{ label }}</span>
            {% endif %}
            {% if callout_title %}
                <h2>{{ callout_title }}</h2>
            {% endif %}
            
            {% if callout_message %}
                <p class="callout-message">{{ callout_message }}</p>
            {% endif %}
            
            {% if callout_button %}
                <a href="{{ callout_button.url }}" class="btn btn-callout">
                    {{ callout_button.text ?: 'Get Started' }}
                    <i class="fas fa-arrow-right"></i>
                </a>
            {% endif %}
        </div>
        
        {# Only render raw markdown content, not processed template output #}
        {% if page.content and page.content|trim|slice(0, 1) != '<' %}
            {{ page.content|raw }}
        {% endif %}
    </div>
</section>

